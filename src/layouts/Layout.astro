---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Ondrej Michal's Site" />
    <meta name="author" content="Ondrej Michal OÄkaj" />
    <meta name="viewport" content="width=device-width" />
    <link
    rel="icon"
    type="image/png"
    href="https://avatars.githubusercontent.com/u/36997301?v=4"
  />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="background">
      <div class="blob-1"></div>
      <div class="blob-2"></div>
    </div>
    <slot />
  </body>
</html>
<style is:global>
  :root {
		--glass-border: rgba(102, 103, 171, 0.1);
    --text-primary: #ffffff;
    --text-secondary: rgba(255, 255, 255, 0.8);
    --purple-primary: 102, 103, 171;
    --background: 6, 0, 16;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    font-family: "Inter", system-ui, sans-serif;
    background: #000000;
    color: var(--text-primary);
    min-height: 100vh;
    overflow-x: hidden;
  }
  body {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }
  .background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: radial-gradient(
      circle at top right,
      rgba(var(--purple-primary), 0.15) 0%,
      rgba(var(--background), 0.95) 60%
    );
  }

  .glass {
    background: linear-gradient(45deg, rgba(102,103,171,0.05) 0%, rgba(255,255,255,0.05) 100%);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(20px);
    border: 2px solid var(--glass-border);
    padding: 2rem;
  }

  .second-glass {
    background: linear-gradient(45deg,  rgba(166, 166, 255, 0.05) 0%, rgba(255,255,255,0.05) 100%);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(20px);
    border: 2px solid var(--glass-border);
    padding: 2rem;
  }

  .blob-1,
  .blob-2 {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    filter: blur(40px);
    z-index: -1;
    opacity: 0.9;
  }

  .blob-1 {
    width: 400px;
    height: 400px;
    background: linear-gradient(-45deg, #1e1f79, #e742ed);
    border-radius: 45% 55% 63% 37% / 40% 60% 65% 35%;
    animation: blob1Animation 15s infinite alternate ease-in-out;
  }

  .blob-2 {
    width: 300px;
    height: 300px;
    background: linear-gradient(45deg, #af42ed, #427bed);
    border-radius: 54% 46% 50% 50% / 50% 50% 46% 54%;
    animation: blob2Animation 15s infinite alternate ease-in-out;
  }

  @keyframes blob1Animation {
    0% {
      transform: translate(-50%, -50%) scale(1) rotate(0deg);
      border-radius: 45% 55% 63% 37% / 40% 60% 65% 35%;
    }
    12.5% {
      transform: translate(-65%, -35%) scale(1.3) rotate(60deg);
      border-radius: 50% 50% 60% 40% / 45% 55% 60% 40%;
    }
    25% {
      transform: translate(-35%, -65%) scale(1.5) rotate(120deg);
      border-radius: 60% 40% 50% 50% / 55% 45% 50% 50%;
    }
    37.5% {
      transform: translate(-50%, -50%) scale(1.3) rotate(60deg);
      border-radius: 55% 45% 60% 40% / 45% 55% 60% 40%;
    }
    50% {
      transform: translate(-50%, -50%) scale(1) rotate(0deg);
      border-radius: 45% 55% 63% 37% / 40% 60% 65% 35%;
    }
    62.5% {
      transform: translate(-65%, -35%) scale(1.3) rotate(60deg);
      border-radius: 50% 50% 60% 40% / 45% 55% 60% 40%;
    }
    75% {
      transform: translate(-35%, -65%) scale(1.5) rotate(120deg);
      border-radius: 60% 40% 50% 50% / 55% 45% 50% 50%;
    }
    87.5% {
      transform: translate(-50%, -50%) scale(1.3) rotate(60deg);
      border-radius: 55% 45% 60% 40% / 45% 55% 60% 40%;
    }
    100% {
      transform: translate(-50%, -50%) scale(1) rotate(0deg);
      border-radius: 45% 55% 63% 37% / 40% 60% 65% 35%;
    }
  }

  @keyframes blob2Animation {
    0% {
      transform: translate(-50%, -50%) scale(1) rotate(0deg);
      border-radius: 54% 46% 50% 50% / 50% 50% 46% 54%;
    }
    12.5% {
      transform: translate(-35%, -65%) scale(1.5) rotate(-60deg);
      border-radius: 50% 50% 60% 40% / 45% 55% 60% 40%;
    }
    25% {
      transform: translate(-65%, -35%) scale(1.7) rotate(-120deg);
      border-radius: 60% 40% 50% 50% / 55% 45% 50% 50%;
    }
    37.5% {
      transform: translate(-50%, -50%) scale(1.5) rotate(-60deg);
      border-radius: 55% 45% 60% 40% / 45% 55% 60% 40%;
    }
    50% {
      transform: translate(-50%, -50%) scale(1) rotate(0deg);
      border-radius: 54% 46% 50% 50% / 50% 50% 46% 54%;
    }
    62.5% {
      transform: translate(-35%, -65%) scale(1.5) rotate(-60deg);
      border-radius: 50% 50% 60% 40% / 45% 55% 60% 40%;
    }
    75% {
      transform: translate(-65%, -35%) scale(1.7) rotate(-120deg);
      border-radius: 60% 40% 50% 50% / 55% 45% 50% 50%;
    }
    87.5% {
      transform: translate(-50%, -50%) scale(1.5) rotate(-60deg);
      border-radius: 55% 45% 60% 40% / 45% 55% 60% 40%;
    }
    100% {
      transform: translate(-50%, -50%) scale(1) rotate(0deg);
      border-radius: 54% 46% 50% 50% / 50% 50% 46% 54%;
    }
  }
</style>
