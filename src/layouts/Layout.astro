---
import "../styles/global.css";

import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Ondrej Michal's Site" />
		<meta name="author" content="Ondrej Michal OÄkaj" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="icon"
			type="image/png"
			href="https://avatars.githubusercontent.com/u/36997301?v=4"
		/>
		<title>{title}</title>
	</head>
	<body>
		<Header title={title} />
		<main>
			<div class="content">
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.content {
		margin: auto;
		padding: 1.5rem;
		max-width: 90ch;
	}
</style>
