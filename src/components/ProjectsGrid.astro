---
import '../styles/global.css';

interface Project {
    title: string;
    description: string;
    url: string;
    ariaLabel: string;
}

interface Props {
    projects: Project[];
}

const { projects = [] } = Astro.props;
---
<div class="projects-section min-w-[300px]">
    <div class="projects-grid flex flex-col gap-6 md:flex-wrap md:flex md:flex-row">
        {projects.map((project) => (
            <div class="project-card glass p-8 min-h-[210px] md:flex-1 md:min-w-[500px] md:flex md:flex-col">
                <div class="project-content project-content flex flex-col h-full">
                    <h3>{project.title}</h3>
                    <p>{project.description}</p>
                    <a
                        href={project.url}
                        class="button glass"
                        aria-label={project.ariaLabel}>View Project</a>
                </div>
            </div>
        ))}
    </div>
</div>