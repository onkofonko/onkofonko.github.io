---
import '../styles/global.css';

export interface SocialLink {
	href: string;
	ariaLabel: string;
	name: string;
	svgHTML: string;
	isDiscord?: boolean;
	discordUsername?: string;
}

interface Props {
	socialLinks: SocialLink[];
}

const { socialLinks } = Astro.props;
---

<div
	class="social-grid grid grid-cols-[repeat(1,1fr)] gap-4 min-h-[210px] mb-6 md:min-w-[300px] md:max-w-[320px] md:mb-0"
>
	{
		socialLinks.map((link) => (
			<a
				href={link.href}
				class="social-card glass flex items-center gap-4 text-[color:var(--text-primary)] no-underline transition-all duration-[0.4s] ease-[cubic-bezier(0.2,0.8,0.2,1)] p-4"
				aria-label={link.ariaLabel}
				id={link.isDiscord ? 'copyDiscord' : undefined}
				discord-username={link.discordUsername}
			>
				<Fragment set:html={link.svgHTML} />
				<span>{link.name}</span>
			</a>
		))
	}
</div>
