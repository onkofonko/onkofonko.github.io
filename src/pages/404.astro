---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Lost in the Wired">
	<main>
		<div class="container glass">
			<div class="content">
				<div class="error-container">
					<div class="error-image">
						<img
							src="./lain.gif"
							alt="Lain Iwakura"
							class="character"
							width="307"
							height="498"
							loading="lazy"
						/>
					</div>
					<p class="error-message">The page you seek is lost within the Wired</p>
					<a href="/" class="button glass">Return to Reality</a>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		height: 100%;
		padding: 2rem;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
	}

	.container {
		width: 100%;
		max-width: 600px;
		margin: 0 auto;
		opacity: 0;
		transform: translateY(20px);
		animation: fadeIn 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
	}

	.content {
		padding: 4rem;
		text-align: center;
	}

	.error-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
	}

	.error-image {
		position: relative;
		width: 250px;
		height: 250px;
		margin-bottom: 1rem;
	}

	.character {
		width: 100%;
		height: 100%;
		object-fit: contain;
		animation: float 6s ease-in-out infinite;
	}

	.error-message {
		font-size: 2rem;
		margin: 0;
		letter-spacing: 0.5px;
		background: linear-gradient(to right, #fff, rgba(255, 255, 255, 0.85));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		font-weight: 700;
	}

	.button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border-radius: 16px;
		color: var(--text-primary);
		text-decoration: none;
		transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
		margin-top: auto;
		text-align: center;
		font-weight: 600;
		position: relative;
		z-index: 1;
		letter-spacing: 0.5px;
		will-change: transform, background-color;
	}

	.button:hover {
		background: rgba(102, 103, 171, 0.1);
		transform: translateY(-2px) scale(1.05);
	}

	.button:focus-visible {
		outline: none;
		box-shadow: var(--focus-ring);
	}
	@keyframes fadeIn {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 1rem;
		}

		.container {
			margin: 0rem;
		}

		.content {
			padding: 3.5rem;
		}

		.error-message {
			font-size: 1.25rem;
		}
		.error-image {
			width: 150px;
			height: 150px;
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.container {
			animation: none;
			opacity: 1;
			transform: none;
		}

		.character {
			animation: none;
		}

		.button:hover {
			transform: none;
		}
	}
</style>
