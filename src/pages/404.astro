---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout title="404 - Lost in the Wired">
	<div
		class="glass container m-auto flex max-w-[600px] translate-y-5 animate-[fadeIn_0.5s_cubic-bezier(0.2,0.8,0.2,1)_forwards] p-4 opacity-0"
	>
		<div class="content p-16 text-center">
			<div class="error-container flex flex-col items-center gap-6">
				<div class="error-image relative mb-4 h-[250px] w-[250px]">
					<img
						src="./lain.gif"
						alt="Lain Iwakura"
						class="character h-full w-full animate-[float_6s_ease-in-out_infinite] object-contain"
						width="307"
						height="498"
						loading="lazy"
					/>
				</div>
				<p class="error-message m-0 text-[2rem] font-bold tracking-[0.5px]">
					The page you seek is lost within the Wired
				</p>
				<a href="/" class="button glass">Return to Reality</a>
			</div>
		</div>
	</div>
</Layout>

<style>
	main {
		height: 100%;
		padding: 2rem;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
	}
	.error-message {
		background: linear-gradient(to right, #fff, rgba(255, 255, 255, 0.85));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	@keyframes fadeIn {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 1rem;
		}

		.container {
			margin: 0rem;
		}

		.content {
			padding: 3.5rem;
		}

		.error-message {
			font-size: 1.25rem;
		}
		.error-image {
			width: 150px;
			height: 150px;
		}
	}
</style>
