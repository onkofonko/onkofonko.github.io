<script src="../scripts/copytext.ts"></script>

<style>
	main {
		height: 100%;
		padding: 2rem;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
	}

	.container {
		width: 100%;
		max-width: 1000px;
		height: calc(100% - 1.5rem);
		margin: 0 auto;
		overflow: hidden;
		opacity: 0;
		transform: translateY(20px);
		animation: fadeIn 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
	}

	@keyframes fadeIn {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.content {
		height: 100%;
		padding: 3.5rem;
		overflow-y: auto;
		scrollbar-width: none;
		-webkit-overflow-scrolling: touch;
		align-content: center;
	}

	.content::-webkit-scrollbar {
		display: none;
	}

	.header {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.header-text {
		flex: 1;
	}

	.name-badge {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.project-header {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.profile-container {
		position: relative;
		width: 120px;
		height: 120px;
		border-radius: 24px;
		overflow: hidden;
		cursor: pointer;
		transition: transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
		will-change: transform;
	}

	.profile-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 24px;
		transition: transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
		will-change: transform;
	}

	.profile-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(102, 103, 171, 0.2);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: opacity 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
	}

	.profile-overlay span {
		font-size: 2rem;
		transform: translateY(20px);
		transition: transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
	}

	.profile-container:hover {
		transform: scale(1.05);
	}

	.profile-container:hover .profile-img {
		transform: scale(1.1);
	}

	.profile-container:hover .profile-overlay {
		opacity: 1;
	}

	.profile-container:hover .profile-overlay span {
		transform: translateY(0);
	}

	.title {
		color: var(--text-secondary);
		margin: 0.5rem 0 1rem;
		font-size: 1.125rem;
		letter-spacing: 0.5px;
		font-weight: 500;
	}

	.social-links {
		display: flex;
		gap: 0.75rem;
	}

	.social-links a {
		padding: 0.75rem;
		border-radius: 16px;
		color: var(--text-primary);
		transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
		display: flex;
		align-items: center;
		justify-content: center;
		min-width: 44px;
		min-height: 44px;
		will-change: transform, background-color;
	}

	.social-links a:hover {
		background: rgba(102, 103, 171, 0.1);
		transform: translateY(-2px) scale(1.05);
	}

	.social-links a:focus-visible {
		outline: none;
		box-shadow: var(--focus-ring);
	}

	.divider {
		height: 1px;
		background: linear-gradient(
			to right,
			rgba(var(--divider), 0.15),
			rgba(var(--divider), 0.03),
			transparent
		);
		margin: 1.8rem 0;
		border-radius: 1px;
	}

	.section {
		margin: 1.5rem 0;
		opacity: 0;
		transform: translateY(20px);
		animation: fadeIn 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
		animation-delay: calc(var(--section-index, 0) * 0.1s);
	}

	.section:first-child {
		margin-top: 0;
		--section-index: 1;
	}

	.section:nth-child(3) {
		--section-index: 2;
	}

	.section:last-child {
		margin-bottom: 0;
		--section-index: 3;
	}

	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin-top: 0.75rem;
	}

	.tag {
		padding: 0.5rem 1rem;
		border-radius: 16px;
		font-size: 0.9rem;
		letter-spacing: 0.5px;
		transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
		cursor: default;
		font-weight: 500;
		will-change: transform, background-color;
	}

	.tag:hover {
		transform: translateY(-2px) scale(1.05);
		background: rgba(102, 103, 171, 0.1);
	}

	.project-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1rem;
		margin-top: 1rem;
	}

	.project-card {
		padding: 1.5rem;
		transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
		display: flex;
		flex-direction: column;
		height: 100%;
		position: relative;
		overflow: hidden;
		isolation: isolate;
		will-change: transform, box-shadow, border-color;
	}

	.project-card:hover {
		transform: translateY(-4px) scale(1.02);
	}

	.project-content {
		flex-grow: 1;
		position: relative;
		z-index: 1;
	}

	.project-card h3 {
		margin-bottom: 0.5rem;
		background: linear-gradient(to right, #fff, rgba(255, 255, 255, 0.9));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		font-weight: 700;
	}

	.project-card p {
		color: var(--text-secondary);
		margin-bottom: 1rem;
		line-height: 1.6;
	}

	.button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border-radius: 16px;
		color: var(--text-primary);
		text-decoration: none;
		transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
		margin-top: auto;
		text-align: center;
		font-weight: 600;
		position: relative;
		z-index: 1;
		letter-spacing: 0.5px;
		will-change: transform, background-color;
	}

	.button:hover {
		background: rgba(102, 103, 171, 0.1);
		transform: translateY(-2px) scale(1.05);
	}

	.button:focus-visible {
		outline: none;
		box-shadow: var(--focus-ring);
	}

	h1 {
		font-size: 2.5rem;
		background: linear-gradient(to right, #fff, rgba(255, 255, 255, 0.85));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		margin: 0;
		font-weight: 700;
		letter-spacing: -0.5px;
	}

	h2 {
		font-size: 1.75rem;
		margin-bottom: 0.75rem;
		background: linear-gradient(to right, #fff, rgba(255, 255, 255, 0.9));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		letter-spacing: -0.5px;
		font-weight: 700;
	}

	@media (max-width: 768px) {
		.header {
			flex-direction: column;
			text-align: center;
		}
		.divider {
			margin: 1.5rem 0;
		}
		.content {
			padding: 3.2rem;
		}
		.social-links {
			justify-content: center;
		}
		.name-badge {
			flex-direction: column;
			gap: 0.5rem;
		}
		.project-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}
		h1 {
			font-size: 2rem;
		}
		h2 {
			font-size: 1.5rem;
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 1rem;
		}
		.container {
			margin: 0;
		}
		.content {
			padding: 2.8rem;
		}
		.profile-container {
			width: 100px;
			height: 100px;
		}
		.button {
			padding: 0.6rem 1.2rem;
		}
		.tag {
			padding: 0.4rem 0.8rem;
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.container,
		.section {
			animation: none;
			opacity: 1;
			transform: none;
		}
		.profile-container:hover,
		.profile-container:hover .profile-img {
			transform: none;
		}
		.profile-overlay {
			display: none;
		}
		.button:hover,
		.tag:hover,
		.project-card:hover,
		.social-links a:hover {
			transform: none;
		}
	}
</style>
