<script src="../scripts/copytext.js"></script>

<style>
	main {
		height: 100vh;
		padding: 2rem;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
	}
	
	.container {
		width: 100%;
		max-width: 1000px;
		max-height: calc(100vh - 2rem);
		margin: 0 auto;
		overflow: auto
	}

	.container::-webkit-scrollbar {
    display: none;
}

	.content {
		padding: 1.5rem;
	}
	.header {
		display: flex;
		align-items: center;
		gap: 2rem;
		margin-bottom: 2rem;
	}
	.header-text {
		flex: 1;
	}
	.profile-img {
		width: 120px;
		height: 120px;
		border-radius: 50%;
		border: 2px solid var(--glass-border);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
	}
	.title {
		color: var(--text-secondary);
		margin: 0.5rem 0 1rem;
	}
	.social-links {
		display: flex;
		gap: 0.75rem;
	}
	.social-links a {
		padding: 0.5rem;
		border-radius: 12px;
		color: var(--text-primary);
		transition: all 0.3s ease;
	}
	.social-links a:hover {
		background: rgba(255, 255, 255, 0.2);
		transform: translateY(-2px);
	}
	.divider {
		height: 1px;
		background: var(--glass-border);
		margin: 1.5rem 0;
	}
	.section {
		margin: 1.5rem 0;
	}
	.section:first-child {
		margin-top: 0;
	}
	.section:last-child {
		margin-bottom: 0;
	}
	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin-top: 0.75rem;
	}
	.tag {
		padding: 0.4rem 0.8rem;
		border-radius: 12px;
		font-size: 0.9rem;
		transition: all 0.3s ease;
	}
	.tag:hover {
		transform: translateY(-2px);
		background: rgba(255, 255, 255, 0.15);
	}
	.project-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1rem;
		margin-top: 1rem;
	}
	.project-card {
		padding: 1.5rem;
		transition: all 0.3s ease;
	}
	.project-card:hover {
		transform: translateY(-4px);
	}
	.project-card h3 {
		margin-bottom: 0.5rem;
	}
	.project-card p {
		color: var(--text-secondary);
		margin-bottom: 1rem;
	}
	.button {
		display: inline-block;
		padding: 0.4rem 0.8rem;
		border-radius: 12px;
		color: var(--text-primary);
		text-decoration: none;
		transition: all 0.3s ease;
	}
	.button:hover {
		background: rgba(255, 255, 255, 0.2);
		transform: translateY(-2px);
	}
	h1 {
		font-size: 2rem;
		background: linear-gradient(to right, #fff, rgba(255, 255, 255, 0.7));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	h2 {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
		background: linear-gradient(to right, #fff, rgba(255, 255, 255, 0.8));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	@media (max-width: 768px) {
		.header {
			flex-direction: column;
			text-align: center;
		}
		.content {
			padding: 2rem;
		}
		.social-links {
			justify-content: center;
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 1rem;
		}
		.container {
			margin: 1rem;
		}
		.content {
			padding: 1.5rem;
		}
	}
</style>