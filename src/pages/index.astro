</Layout>

<script src="../scripts/copytext.ts"></script>

<style>
	main {
		flex: 1;
		width: 100%;
		padding: 2.5rem;
		position: relative;
		z-index: 2;
		display: flex;
		overflow-y: auto;
		scrollbar-width: none;
		-webkit-overflow-scrolling: touch;
	}
	main::-webkit-scrollbar {
		display: none;
	}

	.container {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		max-width: 1600px;
		margin: auto;
		padding: 1rem;
	}

	.row-top,
	.row-bottom {
		display: flex;
		gap: 1.5rem;
		width: 100%;
	}

	.profile-section {
		flex: 1;
		min-width: 300px;
		max-width: 320px;
		display: flex;
	}

	.about-section {
		flex: 2;
		min-width: 400px;
		display: flex;
	}

	.skills-socials-section {
		flex: 1;
		min-width: 300px;
		max-width: 320px;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		margin-top: auto;
	}

	.projects-section {
		flex: 2;
		min-width: 400px;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	


	.projects-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 1.5rem;
	}

	.project-card {
		flex: 1;
		min-width: 400px;
	}

	.profile-card {
		padding: 2rem;
		min-height: 280px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		flex: 1;
	}

	.profile-header {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
	}

	.profile-container {
		width: 120px;
		height: 120px;
		border-radius: 24px;
		overflow: hidden;
	}

	.profile-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 24px;
		transition: transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
		will-change: transform;
	}

	.profile-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(102, 103, 171, 0.2);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: opacity 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
	}

	.profile-overlay span {
		font-size: 2rem;
		transform: translateY(20px);
		transition: transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
	}

	.profile-container:hover .profile-img {
		transform: scale(1.1);
	}
	.profile-container:hover .profile-overlay {
		opacity: 1;
	}

	.profile-container:hover .profile-overlay span {
		transform: translateY(0);
	}

	.profile-info {
		text-align: center;
	}

	.social-grid {
		display: grid;
		grid-template-columns: repeat(1, 1fr);
		gap: 1rem;
	}

	.social-card {
		padding: 1rem;
		display: flex;
		align-items: center;
		gap: 1rem;
		color: var(--text-primary);
		text-decoration: none;
		transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
	}

	.social-card span {
		font-weight: 500;
	}

	.about-card {
		min-height: 280px;
		grid-column: 2;
		padding: 2rem;
		flex: 2;
	}

	.about-content {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.about-description {
		font-size: 1.125rem;
		line-height: 1.6;
		color: var(--text-secondary);
	}

	.skills-card {
		padding: 2rem;
		min-height: 210px;
		display: flex;
		flex-direction: column;
	}

	.project-card {
		padding: 2rem;
		min-height: 210px;
		display: flex;
		flex-direction: column;
	}

	.project-content {
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.project-content p {
		flex-grow: 1;
		margin: 0.5rem 0;
		color: var(--text-secondary);
	}

	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.tag {
		padding: 0.5rem 1rem;
		border-radius: 16px;
		font-size: 0.9rem;
		letter-spacing: 0.5px;
		font-weight: 500;
	}

	.button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border-radius: 16px;
		color: var(--text-primary);
		text-decoration: none;
		margin-top: auto;
		font-weight: 600;
		width: fit-content;
	}

	h1 {
		font-size: 2rem;
		background: linear-gradient(to right, var(--text-primary), var(--text-secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		margin: 0;
		font-weight: 700;
	}

	h2 {
		font-size: 1.5rem;
		background: linear-gradient(to right, var(--text-primary), var(--text-secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	h3 {
		font-size: 1.25rem;
		background: linear-gradient(to right, var(--text-primary), var(--text-secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		margin-bottom: 0.5rem;
		font-weight: 700;
	}

	.title {
		color: var(--text-secondary);
		font-size: 1.125rem;
		letter-spacing: 0.5px;
		font-weight: 500;
	}


	

	@media (max-width: 840px) {
    .container,
	.row-top,
	.row-bottom {
        flex-direction: column;
    }

    .profile-section,
    .about-section,
    .skills-socials-section,
    .projects-section {
        width: 100%;
        min-width: 100%;
    }

    .projects-grid {
        flex-direction: column;
    }

}

@media (max-width: 768px) {
	main {
			padding: 0.5rem;
		}

    .profile-card,
    .about-card,
    .skills-card,
    .social-grid,
    .project-card {
        min-height: 180px;
		min-width: 300px;
    }
}
</style>